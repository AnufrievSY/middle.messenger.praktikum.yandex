<div class="input-page">
    {{#if backHref}}
        <a class="back-btn" href="{{backHref}}" aria-label="Назад">‹</a>
    {{/if}}

    <div class="input-card">

        {{#if avatar}}
            <div class="avatar-placeholder" aria-hidden="true"></div>
        {{/if}}

        <h1 class="input-title">{{title}}</h1>

        {{#if subtitle}}
            <p class="input-subtitle">{{subtitle}}</p>
        {{/if}}

        <form class="input-form" method="post" action="{{action}}" novalidate>
            {{#each fields}}
                <div class="field">
                    <label class="field__label" for="{{name}}">{{label}}</label>
                    <input
                            class="field__input"
                            id="{{name}}"
                            name="{{name}}"
                            type="{{type}}"
                            placeholder="{{placeholder}}"
                            autocomplete="{{autocomplete}}"
                            value="{{#if value}}{{value}}{{/if}}"
                            {{#if required}}required{{/if}}
                    >
                </div>
            {{/each}}

            <button class="btn submit-btn" type="submit">{{submitText}}</button>

            {{#if altLink}}
                <a class="btn alt-btn" href="{{altLink.href}}">{{altLink.text}}</a>
            {{/if}}
        </form>

        {{#if hint}}
            <div class="input-hint">{{hint}}</div>
        {{/if}}
    </div>
</div>
<div class="page-bg"></div>

<script src="/js/check-input.js" defer></script>
